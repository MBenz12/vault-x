{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2015"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha"]
  },
  "exclude": ["./sdk/lib/**/*"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
