{
  "name": "@blockpal/vault-x",
  "version": "0.1.0",
  "description": "Blockpal VaultX Technology",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "vault-x-sdk"
  ],
  "scripts": {
    "clean:full": "rm -fR .anchor node_modules target && yarn workspace @blockpal/vault-x-sdk clean:full",
    "generate-sdk": "yarn workspace @blockpal/vault-x-sdk generate && yarn lint || true",
    "build-sdk": "yarn workspace @blockpal/vault-x-sdk build",
    "build": "yarn generate-sdk && yarn build-sdk",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "test": "yarn build && anchor test -- --features=testing",
    "pretest": "mkdir -p target/deploy && cp ./test-keypairs/test-program-keypair.json ./target/deploy/vaultx-keypair.json"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.0",
    "@solana/spl-account-compression": "*",
    "@solana/spl-memo": "^0.2.3",
    "@solana/spl-token": "*",
    "@types/bn.js": "5.1.0",
    "@types/mocha": "10.0.1",
    "@types/node-fetch": "2.6.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.56.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-mocha": "^10.4.3",
    "mocha": "10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.4",
    "typescript-eslint": "^7.8.0"
  },
  "resolutions": {
    "@solana/web3.js": "1.70.3",
    "@solana/spl-token": "0.3.6",
    "typescript": "4.9.4",
    "@solana/spl-account-compression": "0.2.0",
    "eslint": "8.56.0"
  },
  "nyc": {
    "include": [
      "vault-x-sdk/src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  }
}
